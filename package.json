{
  "name": "bc-cms-api",
  "version": "0.0.1",
  "description": "Back Country CMS application API",
  "main": "index.js",
  "scripts": {
    "prestart": "npm run prisma:generate",
    "start": "node index.js",
    "dev": "nodemon index.js",
    "lint": "eslint .",
    "lint:fix": "eslint --fix",
    "test": "jest",
    "prisma:generate:mongo": "npx prisma generate --schema=./prisma/mongoSchema.prisma --generator=mongoClient",
    "prisma:generate:postgres": "npx prisma generate --schema=./prisma/postgresSchema.prisma --generator=postgresClient",
    "prisma:generate": "npm run prisma:generate:mongo && npm run prisma:generate:postgres",
    "prisma:format": "npx prisma format --schema=./prisma/mongoSchema.prisma",
    "prisma:push": "npx prisma db push --schema=./prisma/mongoSchema.prisma",
    "prepare": "husky install && chmod ug+x .husky/*",
    "postinstall": "npm run prisma:generate && npm run prepare"
  },
  "keywords": [],
  "author": "nikhil.s@litmus7.com",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/raj-kumar-litmus/bc-cms-rewrite-node-ms"
  },
  "license": "MIT",
  "dependencies": {
    "@google-cloud/pubsub": "^3.7.0",
    "@prisma/client": "^4.14.0",
    "axios": "^1.4.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "helmet": "^6.0.1",
    "joi": "^17.9.2",
    "morgan": "^1.10.0",
    "pino": "^8.14.1"
  },
  "devDependencies": {
    "eslint": "^8.40.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-unused-imports": "^2.0.0",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "lint-staged": "^13.2.2",
    "nodemon": "^2.0.21",
    "prettier": "^2.8.8",
    "prisma": "^4.14.0",
    "supertest": "^6.3.3"
  },
  "bugs": {
    "url": "https://github.com/raj-kumar-litmus/bc-cms-rewrite-node-ms/issues"
  },
  "homepage": "https://github.com/raj-kumar-litmus/bc-cms-rewrite-node-ms/blob/main/README.md",
  "directories": {
    "test": "test"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  }
}
